.container {
  padding: 0;
  min-height: 100vh;
  width: 100vw;
  box-sizing: border-box;
  background-color: #f5f5f5;
  padding-top: 180rpx;
}

.back-btn {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  padding-top: 150rpx;
}

.notification-detail {
  padding: 30rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  margin: 20rpx;
  background-color: #fff;
}

.notification-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.notification-time {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.notification-content {
  font-size: 28rpx;
  color: #333;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}