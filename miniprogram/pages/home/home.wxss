/* pages/home/home.wxss */
.home-page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
/* pages/home/home.wxss */
.tabbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1px solid #ccc; /* 根据需要调整 */
  background-color: #fff; /* 根据需要调整 */
}

.tabbar-item {
  flex: 1;
  text-align: center;
}

.tabbar-icon {
  width: 24px; /* 根据需要调整 */
  height: 24px; /* 根据需要调整 */
  margin-bottom: 5px; /* 根据需要调整 */
}

.tabbar-text {
  font-size: 12px; /* 根据需要调整 */
  color: #666; /* 根据需要调整 */
}


.search {
  background: #EFEFF5;
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search .search_content {
  width: 100%;
  height: 50rpx;
  background: #ffffff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(133,133,133,1);
  font-size: 28rpx;
}
.search .search_content image {
  width: 30rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.home_content {
  box-sizing: border-box;
  padding-top: 20rpx;
}
.swiper_box {
  width: 100%;
  height: 400rpx;
}
.swiper_box swiper {
  width: 94%;
  height: 360rpx;
  margin: 0 3%;
}
.swiper_box image {
  width: 100%;
  height: 100%;
  border-radius: 23rpx;
}
.nav_list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.nav_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.nav_item image {
  width: 60rpx;
  height: 60rpx;
}
.nav_item text {
  color: rgba(77,77,77,1);
  font-size: 26rpx;
  margin-top: 8px;
}

