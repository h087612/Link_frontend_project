.container {
  padding: 20rpx;
  padding-top: 180rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.category-section, .date-section, .limit-section, .upload-section ,.time-section{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.label {
  font-size: 28rpx;
  color: #333;
  width: 140rpx;
}

.picker {
  flex: 1;
  font-size: 28rpx;
  text-align: right;
}

.limit-controls {
  display: flex;
  align-items: center;
}

.limit-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 46rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 32rpx;
}

.limit-num {
  margin: 0 30rpx;
  font-size: 28rpx;
  min-width: 40rpx;
  text-align: center;
}

.upload-section {
  width: 100%;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.upload-icon {
  width: 50rpx;
  height: 50rpx;
}

.thumbnail {
  width: 100%;
  height: 300rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.textarea {
  width: 100%;
  height: 300rpx;
  margin-bottom: 10rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.button-section {
  display: flex;
  justify-content: space-between;
  padding: 0;
  margin-top: 10rpx;
}

.publish-btn, .cancel-btn {
  width: 49%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
  text-align: center;
  border: none;
}

.publish-btn {
  background-color: #07c160;
  color: #fff;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #333;
}

.thumbnail-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.thumbnail {
  width: 30%;
  height: 100rpx;
  border-radius: 8rpx;
  object-fit: cover;
}
