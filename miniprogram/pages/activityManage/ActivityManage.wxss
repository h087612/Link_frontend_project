.activity_manage {
  padding: 160rpx 0;
}

.tab {
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}
.tab1 {
  padding: 0 40rpx;
}
.tab2 {
  padding: 0 30rpx;
  margin: 20rpx 0 40rpx;
}
.tab text {
  border-radius: 8rpx;
  background-color: rgba(255,255,255,1);
  color: rgba(16,16,16,1);
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  border: 1rpx solid rgba(187,187,187,1);
}
.tab text.active {
  background-color: rgba(164,173,179,1);
  color: rgba(255,255,255,1);
}
.tab1 text {
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.tab2 text {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.activity_list {

}
.activity_item {

}
.activity_item .row1,
.activity_item .row2 {
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.activity_item .row1 .tag {
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 10rpx;
  background-color: rgba(255,158,36,1);
  color: rgba(255, 255, 255, 1);
  font-size: 24rpx;
  text-align: center;
  margin-right: 10rpx;
}
.activity_item .row1 .title {
  color: #101010;
  font-size: 28rpx;
  font-weight: bold;
  max-width: 540rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.activity_item .row2 {
  margin: 8rpx 0 20rpx;
  justify-content: space-between;
}
.activity_item .row2 text {
  color: rgba(52,124,175,1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}
.activity_item .row2 image {
  width: 48rpx;
  height: 48rpx;
}
.activity_item .row2 view {
  color: rgba(52,124,175,1);
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.operate {
  width: 100%;
  box-sizing: border-box;
  padding: 0 60rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.operate text {
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  background-color: rgba(255,255,255,1);
  color: rgba(16,16,16,1);
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: 2rpx solid rgba(187,187,187,1);
}
