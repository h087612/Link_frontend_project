.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-top: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.back-btn {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  padding-top: 50rpx;
}

.user-point {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.transaction-list {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  color: #fff;
}

.transaction-points {
  font-size: 28rpx;
  font-weight: bold;
}

.transaction-time {
  font-size: 24rpx;
}

.empty-state {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
} 